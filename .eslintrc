{
	"plugins": [
		"react"
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jquery": true,
		"mocha": true
	},
	"rules": {
		"eqeqeq": 2,
		"curly": 2,
		"quotes": [
			2,
			"single",
			{"allowTemplateLiterals": true}
		],
		"semi": ["error", "always"],
		"no-unused-vars": 0,
		"no-multi-spaces": 0,
		"no-mixed-spaces-and-tabs": 0,
		"no-extra-boolean-cast": 0,
		"no-use-before-define": 0,
		"no-underscore-dangle": 0,
		"no-trailing-spaces": 1
	},
	"globals": {
		"imodEm": true,
		"echarts": true,
		"_": true
	}
}